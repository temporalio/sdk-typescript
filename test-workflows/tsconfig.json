{
    "version": "2.4.2",
    "compilerOptions": {
        "lib": [ // es2015.collection excluded because it defines WeakMap and WeakSet
          "es5",
          "es2015.core",
          "es2015.generator",
          "es2015.iterable",
          "es2015.promise",
          "es2015.proxy",
          "es2015.reflect",
          "es2015.symbol",
          "es2015.symbol.wellknown",
          "es2016.array.include",
          "es2017.object",
          "es2017.intl",
          "es2017.sharedmemory",
          "es2017.string",
          "es2017.typedarrays"
        ],
        "target": "es2017",
        "module": "es2020",
        "moduleResolution": "node",
        "emitDecoratorMetadata": false,
        "experimentalDecorators": false,
        "esModuleInterop": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "strict": true,
        "noUnusedLocals": true,
        "outDir": "./lib",
        "typeRoots": ["./src"],
        "rootDir": "./src",
        "incremental": true,
        "composite": true,
        "paths": {
            "@activities": ["../test-activities/lib"],
            "@activities/*": ["../test-activities/lib/*"],
            "@temporal-sdk/*": ["../workflow-lib/lib/*"],
            "@interfaces": ["../workflow-interfaces/lib"]
        }
    },
    "references": [
        { "path": "../" },
        { "path": "../test-activities/" },
        { "path": "../workflow-lib/" },
        { "path": "../workflow-interfaces/" }
    ],
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
